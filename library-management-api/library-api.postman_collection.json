          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "url": "{{base_url}}/api/authors",
            "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"Isaac\",\n  \"lastName\": \"Asimov\",\n  \"nationality\": \"American\",\n  \"birthYear\": 1920\n}" }
          }
        },
        {
          "name": "Update Author (ADMIN)",

            "url": "{{base_url}}/api/authors/1",
            "body": { "mode": "raw", "raw": "{\n  \"firstName\": \"Victor\",\n  \"lastName\": \"Hugo\",\n  \"nationality\": \"French\",\n  \"birthYear\": 1802\n}" }
